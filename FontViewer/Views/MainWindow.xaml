<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FontViewer.ViewModels;assembly=FontViewer"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FontViewer.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="FontViewer">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <DockPanel LastChildFill="True">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="CadetBlue">
      <Button Content="打开" Command="{Binding OpenCommand}"/>
    </StackPanel>
    <DockPanel>
      <TreeView Items="{Binding Items}" DockPanel.Dock="Left" Background="Aqua" Width="250"/>
      <StackPanel Background="Beige"></StackPanel>
    </DockPanel>
  </DockPanel>

</Window>
